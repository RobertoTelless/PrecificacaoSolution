@using Presentation.Extensions
@using CrossCutting
@model ERP_Condominios_Solution.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div id="content" class="wraper container-fluid">
    <div class="page-title"> 
        <h3 class="title">Fornecedores</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCadastros", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaFornecedor", "Fornecedor")">Fornecedores</a>
            </li>
            <li class="active">
                <strong>Fornecedores - Indicadores</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Fornecedores - Indicadores</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaFornecedor", controller: "Fornecedor", buttonClass: "success")
                    </div>
                    <br /><br />
                </div>
            </div>

            @*Estatísticas*@
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12">
                    <div class="ibox-content text-center">
                        <h1>@((String)Session["Nome"])</h1>
                        <div class="m-b-sm">
                            <img alt="image" class="img-circle" src="@Url.Content(Model.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 90px; max-width: 90px;">
                        </div>
                        <p class="font-bold">@((String)Session["NomeGreeting"])</p>

                        <div class="text-center">
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-warning pull-right">Hoje</span>
                            <h5>Resumo Fornecedores</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Cadastrados</small>
                                    <h4>@ViewBag.FornNum</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Ativos</small>
                                    <h4>@ViewBag.FornAtivos</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Pagamento Atrasado</small>
                                    <h4>@ViewBag.FornAtrasos</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Com Pedidos</small>
                                    <h4>@ViewBag.FornPedidos</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Pendentes</small>
                                    <h4>@ViewBag.FornPendentes</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            @*Widgets*@
            <br />
            <div class="row">
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkblue">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Fornecedores</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.FornAtrasos</h1>
                            <small>Pagamento em Atraso</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Fornecedor", action: "MontarTelaFornecedorPagAtraso", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkblue">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Fornecedores</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.FornPedidos</h1>
                            <small>Com Pedidos</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Fornecedor", action: "MontarTelaFornecedorPedidos", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkblue">
                            <span class="label label-success pull-right">Hoje</span>
                            <h5>Fornecedores</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.FornPendentes</h1>
                            <small>Pedidos Pendentes</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Fornecedor", action: "MontarTelaFornecedorPendentes", buttonClass: "white")
                        </div>
                    </div>
                </div>
            </div>

            @*Graficos*@
            <div class="row">
                <div class="col-lg-3 col-md-3 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por UF</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <canvas id="doughnutChartFornecedorUF" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por Cidade</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <canvas id="doughnutChartFornecedorCidade" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-3 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por Categoria</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <canvas id="doughnutChartFornecedorCategoria" height="300"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por UF</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                @if ((ViewBag.ListaFornUF as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                {
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead style="background-color:lightsteelblue">
                                            <tr>
                                                <th>UF</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cond in (ViewBag.ListaFornUF as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).OrderBy(p => p.Valor).Take(10))
                                            {
                                                <tr>
                                                    <td>@cond.Nome</td>
                                                    <td>@cond.Valor</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por UF</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <canvas id="barChartFornecedorUF" height="150"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por Cidade</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                @if ((ViewBag.ListaFornCidade as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                {
                                    <table class="table table-striped table-bordered table-hover">
                                        <thead style="background-color:lightsteelblue">
                                            <tr>
                                                <th>Cidade</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cond in (ViewBag.ListaFornCidade as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).OrderBy(p => p.Valor).Take(10))
                                            {
                                                <tr>
                                                    <td>@cond.Nome</td>
                                                    <td>@cond.Valor</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-8 col-xs-12">
                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                        <div class="ibox-title">
                            <h4>Fornecedores por Cidade</h4>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <canvas id="barChartFornecedorCidade" height="150"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/toastr")
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/sparkline")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chartjs")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Fornecedor/GetDadosFornecedorCategoria'
                , type: 'POST'
                , success: function (result) {
                var doughnutData = {
                   labels: result.labels,
                   datasets: [{
                     data: result.valores,
                     backgroundColor: result.cores
                   }]
                };
                var doughnutOptions = {
                   responsive: true
                };
                var ctx4 = document.getElementById("doughnutChartFornecedorCategoria").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
              }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Fornecedor/GetDadosFornecedorUF'
                , type: 'POST'
                , success: function (result) {
                var doughnutData = {
                   labels: result.labels,
                   datasets: [{
                     data: result.valores,
                     backgroundColor: result.cores
                   }]
                };
                var doughnutOptions = {
                   responsive: true
                };
                var ctx4 = document.getElementById("doughnutChartFornecedorUF").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
              }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Fornecedor/GetDadosFornecedorCidade'
                , type: 'POST'
                , success: function (result) {
                var doughnutData = {
                   labels: result.labels,
                   datasets: [{
                     data: result.valores,
                     backgroundColor: result.cores
                   }]
                };
                var doughnutOptions = {
                   responsive: true
                };
                var ctx4 = document.getElementById("doughnutChartFornecedorCidade").getContext("2d");
                new Chart(ctx4, { type: 'doughnut', data: doughnutData, options: doughnutOptions });
              }
            });
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Fornecedor/GetDadosFornecedorUFLista'
                , type: 'POST'
                , success: function (result) {
                var barData = {
                    labels: result.ufs,
                    datasets: [
                        {
                            label: "Fornecedores por UF",
                            backgroundColor: 'rgba(26,179,148,0.5)',
                            pointBorderColor: "#fff",
                            data: result.valores
                        }
                    ]
                };

                var barOptions = {
                    responsive: true
                };

                var ctx2 = document.getElementById("barChartFornecedorUF").getContext("2d");
                new Chart(ctx2, { type: 'bar', data: barData, options: barOptions });
              }
            });
        });
    </script>
        <script type="text/javascript">
        $(document).ready(function () {

            $.ajax({
                url: '../Fornecedor/GetDadosFornecedorCidadeLista'
                , type: 'POST'
                , success: function (result) {
                var barData = {
                    labels: result.cids,
                    datasets: [
                        {
                            label: "Fornecedores por Cidade",
                            backgroundColor: 'rgba(26,179,148,0.5)',
                            pointBorderColor: "#fff",
                            data: result.valores
                        }
                    ]
                };

                var barOptions = {
                    responsive: true
                };

                var ctx2 = document.getElementById("barChartFornecedorCidade").getContext("2d");
                new Chart(ctx2, { type: 'bar', data: barData, options: barOptions });
              }
            });
        });
    </script>
@if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                  alert("@ViewBag.Message");
            };
        </script>
    }
}

