                                                                Preço Venda (R$)
                                                                @Html.TextBoxFor(m => m.PrecoVenda, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Preço Promoção (R$)
                                                                @Html.TextBoxFor(m => m.PrecoPromocao, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
