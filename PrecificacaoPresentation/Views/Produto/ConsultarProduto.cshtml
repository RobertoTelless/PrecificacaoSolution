                                                        @Html.HiddenFor(x => x.PROD_NR_CEST)
                                                        @Html.HiddenFor(x => x.PROD_NR_GTIN_EAN_TRIB)
                                                        @Html.HiddenFor(x => x.PROD_NM_UNIDADE_TRIBUTARIA)
                                                        @Html.HiddenFor(x => x.PROD_NR_FATOR_CONVERSAO)
                                                        @Html.HiddenFor(x => x.PROD_NR_ENQUADRE_IPI)
                                                        @Html.HiddenFor(x => x.PROD_VL_IPI_FIXO)
                                                        @Html.HiddenFor(x => x.AvisaMinima)
                                                        @Html.HiddenFor(x => x.PROD_VL_PRECO_VENDA)
                                                        @Html.HiddenFor(x => x.PROD_VL_PRECO_PROMOCAO)
                                                        @if (!String.IsNullOrEmpty(Model.PROD_AQ_FOTO))
                                                        {
                                                            <img src="@Url.Content(Model.PROD_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '@Url.Content(Model.PROD_AQ_FOTO)')">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '/Images/gallery/10s.jpg')">
                                                        }
                                                        <br />
                                                        <br />
                                                        <br />
                                                        <br />
                                                        <br />
                                                    </div>
                                                </div>
                                                <div class="col-md-11">
                                                    <div class="row">
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Categoria
                                                            @Html.TextBoxFor(m => m.CATEGORIA_PRODUTO.CAPR_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                        </div>
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Subcategoria
                                                            @Html.TextBoxFor(m => m.SUBCATEGORIA_PRODUTO.SCPR_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                        </div>
                                                        <div class=" col-lg-2 col-md-2 col-xs-12" style="color: green; font-weight:bold;">
                                                            Tipo de Produto
                                                            @Html.TextBoxFor(m => m.Tipo, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Unidade
                                                            @Html.TextBoxFor(m => m.UNIDADE.UNID_NM_NOME, new { @class = "form-control", autofocus = true, @readonly="readonly" })
                                                        </div>
                                                        @if (Model.PROD_IN_TIPO_PRODUTO == 1)
                                                        {
                                                            <div class="col-lg-2 col-md-3 col-xs-12">
                                                                Produto Composto
                                                                <br />
                                                                @Html.CheckBoxFor(m => m.Composto, new { @class = "checkbox i-checks", @readonly="readonly" })
                                                            </div>
                                                        }
                                                    </div>
                                                    <br />
                                                    <div class="row">
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Código (SKU)
                                                            @Html.TextBoxFor(m => m.PROD_CD_CODIGO, new { @class = "form-control", autofocus = true, @readonly = "readonly" })
                                                        </div>
                                                        @if (Model.PROD_IN_TIPO_PRODUTO == 1)
                                                        {
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Código de Barras
                                                                @Html.TextBoxFor(m => m.PROD_BC_BARCODE, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                        }
                                                        <div class="col-lg-6 col-md-6 col-xs-12">
                                                            Nome
                                                            @Html.TextBoxFor(m => m.PROD_NM_NOME, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        Descrição
                                                        @Html.TextAreaFor(m => m.PROD_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly"  })
                                                    </div>
                                                </div>
                                                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        Informações do Produto
                                                        @Html.TextAreaFor(m => m.PROD_DS_INFORMACOES, new { @class = "form-control", style = "width: 100%; height: 100px;", autofocus = true, @readonly = "readonly"  })
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                @*Imagens*@
                                <div id="tab-imagens" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-lg-10 col-md-10 col-xs-12">
                                                <div class="form-group">
                                                    <h4>Imagem do Produto</h4>
                                                </div>
                                            </div>
                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                <div class="form-group">
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <br />
                                                        @if (!String.IsNullOrEmpty(Model.PROD_AQ_FOTO))
                                                        {
                                                            <img src="@Url.Content(Model.PROD_AQ_FOTO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '@Url.Content(Model.PROD_AQ_FOTO)')">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.PROD_NM_NOME', '/Images/gallery/10s.jpg')">
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Estoque*@
                                @if (!Model.Composto)
                                {
                                    <div id="tab-2" class="tab-pane">
                                        <div class="panel-body">
                                            @using (Html.BeginForm("ConsultarProduto", "Produto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                            {
                                                <div class="row">
                                                    <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                        <div class="col-lg-2 col-md-2 col-xs-12" style="color: green;font-weight: bold">
                                                            Estoque Atual
                                                            @if (Model.PROD_IN_TIPO_PRODUTO == 1)
                                                            {
                                                                @Html.TextBoxFor(m => m.PROD_QN_ESTOQUE, new { @class = "form-control", autofocus = true, @readonly = "readonly", style="color:green; font-wheight: bold" })
                                                            }
                                                            else
                                                            {
                                                                @Html.TextBoxFor(m => m.PROD_QN_ESTOQUE_INSUMO, new { @class = "form-control", autofocus = true, @readonly = "readonly", style="color:green; font-wheight: bold" })
                                                            }
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            @Html.HiddenFor(x => x.PROD_CD_ID)
                                                            @Html.HiddenFor(x => x.ASSI_CD_ID)
                                                            @Html.HiddenFor(x => x.CAPR_CD_ID)
                                                            @Html.HiddenFor(x => x.UNID_CD_ID)
                                                            @Html.HiddenFor(x => x.PROD_NM_NOME)
                                                            @Html.HiddenFor(x => x.PROD_DS_DESCRICAO)
                                                            @Html.HiddenFor(x => x.PROD_QN_QUANTIDADE_INICIAL)
                                                            @Html.HiddenFor(x => x.PROD_QN_ESTOQUE)
                                                            @Html.HiddenFor(x => x.PROD_QN_ESTOQUE_INSUMO)
                                                            @Html.HiddenFor(x => x.PROD_IN_AVISA_MINIMO)
                                                            @Html.HiddenFor(x => x.PROD_DT_CADASTRO)
                                                            @Html.HiddenFor(x => x.PROD_IN_ATIVO)
                                                            @Html.HiddenFor(x => x.PROD_AQ_FOTO)
                                                            @Html.HiddenFor(x => x.PROD_CD_CODIGO)
                                                            @Html.HiddenFor(x => x.PROD_IN_TIPO_PRODUTO)
                                                            @Html.HiddenFor(x => x.SCPR_CD_ID)
                                                            @Html.HiddenFor(x => x.PROD_DS_INFORMACOES)
                                                            @Html.HiddenFor(x => x.PROD_NR_REFERENCIA)
                                                            @Html.HiddenFor(x => x.PROD_DS_INFORMACAO_NUTRICIONAL)
                                                            @Html.HiddenFor(x => x.PROD_NR_NCM)
                                                            @Html.HiddenFor(x => x.PROD_CD_GTIN_EAN)
                                                            @Html.HiddenFor(x => x.PROD_NM_LOCALIZACAO_ESTOQUE)
                                                            @Html.HiddenFor(x => x.PROD_QN_PESO_BRUTO)
                                                            @Html.HiddenFor(x => x.PROD_QN_PESO_LIQUIDO)
                                                            @Html.HiddenFor(x => x.PROD_IN_TIPO_EMBALAGEM)
                                                            @Html.HiddenFor(x => x.PROD_NR_LARGURA)
                                                            @Html.HiddenFor(x => x.PROD_NR_COMPRIMENTO)
                                                            @Html.HiddenFor(x => x.PROD_NR_ALTURA)
                                                            @Html.HiddenFor(x => x.PROD_NR_DIAMETRO)
                                                            @Html.HiddenFor(x => x.PROD_TX_OBSERVACOES)
                                                            @Html.HiddenFor(x => x.PROD_IN_COMPOSTO)
                                                            @Html.HiddenFor(x => x.PROD_NM_MARCA)
                                                            @Html.HiddenFor(x => x.PROD_NM_MODELO)
                                                            @Html.HiddenFor(x => x.PROD_NM_FABRICANTE)
                                                            @Html.HiddenFor(x => x.PROD_BC_BARCODE)
                                                            @Html.HiddenFor(x => x.PROR_CD_ID)
                                                            @Html.HiddenFor(x => x.PROD_NR_CEST)
                                                            @Html.HiddenFor(x => x.PROD_NR_GTIN_EAN_TRIB)
                                                            @Html.HiddenFor(x => x.PROD_NM_UNIDADE_TRIBUTARIA)
                                                            @Html.HiddenFor(x => x.PROD_NR_FATOR_CONVERSAO)
                                                            @Html.HiddenFor(x => x.PROD_NR_ENQUADRE_IPI)
                                                            @Html.HiddenFor(x => x.PROD_VL_IPI_FIXO)
                                                            @Html.HiddenFor(x => x.Composto)
                                                            Estoque Máximo
                                                            @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MAXIMA, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Estoque Mínimo
                                                            @Html.TextBoxFor(m => m.PROD_QN_QUANTIDADE_MINIMA, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                        </div>
                                                        <div class="col-lg-2 col-md-2 col-xs-12">
                                                            Reserva de Estoque
                                                            @Html.TextBoxFor(m => m.PROD_QN_RESERVA_ESTOQUE, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                        </div>
                                                        <div class="col-lg-3 col-md-3 col-xs-12">
                                                            Aviso de Limite Mínimo
                                                            <br />
                                                            @Html.CheckBoxFor(m => m.AvisaMinima, new { @class = "checkbox i-checks", @readonly = "readonly" })
                                                        </div>
