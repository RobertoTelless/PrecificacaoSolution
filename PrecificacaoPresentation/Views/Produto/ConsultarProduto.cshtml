@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<style>
    /* Chrome, Safari, Edge, Opera */
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    /* Firefox */
    input[type=number] {
        -moz-appearance: textfield;
    }
</style>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-title">
        <h3 class="title">Produtos</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCadastros", "BaseAdmin")">Dashboard - Cadastros</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaProduto", "Produto")">Produtos</a>
            </li>
            <li class="active">
                <strong>Produtos - Consulta</strong>
            </li>
        </ol>
        <br />
    </div>

    @*TABS - PRINCIPAL*@
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <div class="row">
                        <div style="text-align: center;" class="col-lg-12 col-md-12 col-xs-12">
                            <h5>Produto - Consulta</h5>
                            <span style="font-weight: 500; font-size: 20px;">@Model.PROD_NM_NOME</span>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                        <div class="form-group">
                            @if (Model.FICHA_TECNICA != null && Model.FICHA_TECNICA.Count > 0)
                            {
                                @Html.ButtonLinkIndex(text: "Composição do Produto", action: "VerFT", controller: "FichaTecnica", routeValues: new { id = Model.FICHA_TECNICA.First().FITE_CD_ID })
                            }
                            @Html.ButtonLinkIndex(text: "Gerar Relatório", action: "GerarRelatorioDetalhe", controller: "Produto")
                            @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseProduto", controller: "Produto")
                        </div>
                        <div class="tabs-container">
                            <ul class="nav nav-tabs">
                                <li class="@ViewBag.TabGeral"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li class=""><a data-toggle="tab" href="#tab-imagens">Foto/Logotipo</a></li>                                
                                @if (!Model.Composto)
                                {
                                    <li class=""><a data-toggle="tab" href="#tab-2">Estoque & Preços</a></li>
                                    <li class=""><a data-toggle="tab" href="#tab-3">Fornecedores</a></li>
                                }                                
                                <li id="varejoTab" class=""><a data-toggle="tab" href="#tab-4">Dados do Produto</a></li>                                
                                @if (Model.PROD_IN_TIPO_PRODUTO == 1)
                                {
                                    <li class=""><a data-toggle="tab" href="#tab-6">Informações Tributárias</a></li>
                                }                                
                                @if (!Model.Composto & Model.PROD_IN_TIPO_PRODUTO == 1)
                                {
                                    if (ViewBag.CatExpedicao == 1)
                                    {
                                        <li id="expTab" class=""><a data-toggle="tab" href="#tab-7">Expedição</a></li>
                                    }
                                }                              
                                <li class=""><a data-toggle="tab" href="#tab-9">Anexos</a></li>                               
                                <li class=""><a data-toggle="tab" href="#tab-11">Observações</a></li>                               
                                @if (!Model.Composto)
                                {
                                    <li class=""><a data-toggle="tab" href="#tab-12">Movimentação do Estoque</a></li>
                                }                                
                                <li class=""><a data-toggle="tab" href="#tab-13">Resumos</a></li>
                                @if (Model.Composto  & Model.PROD_IN_TIPO_PRODUTO == 1)
                                {
                                    <li class=""><a data-toggle="tab" href="#tab-14">Composição do Produto</a></li>
                                }
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane @ViewBag.TabGeral">
                                    <div class="panel-body">
                                        @using (Html.BeginForm("ConsultarProduto", "Produto", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                        {
                                            <div class="row" style="width: 100%;">
                                                <div class="col-lg-1 col-md-1 col-xs-12">
                                                    <div style="text-align: center; margin-top: 25px; line-height: 10px;">
                                                        @Html.HiddenFor(x => x.PROD_AQ_FOTO)
                                                        @Html.HiddenFor(x => x.PROD_CD_ID)
                                                        @Html.HiddenFor(x => x.ASSI_CD_ID)
                                                        @Html.HiddenFor(x => x.PROD_QN_QUANTIDADE_MINIMA)
                                                        @Html.HiddenFor(x => x.PROD_QN_QUANTIDADE_INICIAL)
                                                        @Html.HiddenFor(x => x.PROD_QN_ESTOQUE)
                                                        @Html.HiddenFor(x => x.PROD_QN_ESTOQUE_INSUMO)
                                                        @Html.HiddenFor(x => x.PROD_DT_ULTIMA_MOVIMENTACAO)
                                                        @Html.HiddenFor(x => x.PROD_IN_AVISA_MINIMO)
                                                        @Html.HiddenFor(x => x.PROD_IN_TIPO_PRODUTO)
                                                        @Html.HiddenFor(x => x.PROD_DT_CADASTRO)
                                                        @Html.HiddenFor(x => x.PROD_IN_ATIVO)
                                                        @Html.HiddenFor(x => x.PROD_QN_QUANTIDADE_MAXIMA)
                                                        @Html.HiddenFor(x => x.PROD_QN_RESERVA_ESTOQUE)
                                                        @Html.HiddenFor(x => x.PROD_NR_REFERENCIA)
                                                        @Html.HiddenFor(x => x.PROD_DS_INFORMACAO_NUTRICIONAL)
                                                        @Html.HiddenFor(x => x.PROD_NR_NCM)
                                                        @Html.HiddenFor(x => x.PROD_CD_GTIN_EAN)
                                                        @Html.HiddenFor(x => x.PROD_NM_LOCALIZACAO_ESTOQUE)
                                                        @Html.HiddenFor(x => x.PROD_QN_PESO_BRUTO)
                                                        @Html.HiddenFor(x => x.PROD_QN_PESO_LIQUIDO)
                                                        @Html.HiddenFor(x => x.PROD_IN_TIPO_EMBALAGEM)
                                                        @Html.HiddenFor(x => x.PROD_NR_LARGURA)
                                                        @Html.HiddenFor(x => x.PROD_NR_COMPRIMENTO)
                                                        @Html.HiddenFor(x => x.PROD_NR_ALTURA)
                                                        @Html.HiddenFor(x => x.PROD_NR_DIAMETRO)
                                                        @Html.HiddenFor(x => x.PROD_VL_MARKUP_MINIMO)
                                                        @Html.HiddenFor(x => x.PROD_VL_PRECO_MINIMO)
                                                        @Html.HiddenFor(x => x.PROD_VL_MARKUP_PADRAO)
                                                        @Html.HiddenFor(x => x.PROD_TX_OBSERVACOES)
                                                        @Html.HiddenFor(x => x.PROD_IN_COMPOSTO)
                                                        @Html.HiddenFor(x => x.PROD_NM_MARCA)
                                                        @Html.HiddenFor(x => x.PROD_NM_MODELO)
