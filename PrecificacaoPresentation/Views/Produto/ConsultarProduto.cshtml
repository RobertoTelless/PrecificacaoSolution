                                                                Markup Mínimo (%)
                                                                @Html.TextBoxFor(m => m.MarkupMinimo, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Markup Padrão (%)
                                                                @Html.TextBoxFor(m => m.MarkupPadrao, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                            <div class="col-lg-2 col-md-2 col-xs-12">
                                                                Último Custo (R$)
                                                                @Html.TextBoxFor(m => m.UltimoCusto, new { @class = "form-control", autofocus = true, @readonly = "readonly"  })
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }

                                @*Fornecedores*@
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <hr />
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <h4>Fornecedores Vinculados ao Produto</h4>
                                                    <br />
                                                    @if (Model.PRODUTO_FORNECEDOR != null && Model.PRODUTO_FORNECEDOR.Count > 0)
                                                    {
                                                        <table class="table table-striped table-bordered table-hover dataTables-example">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <th>Nome</th>
                                                                    <th>E-Mail</th>
                                                                    <th>Celular</th>
                                                                    <th>Telefone</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (var cond in (Model.PRODUTO_FORNECEDOR))
                                                                {
                                                                    <tr>
                                                                        <td>@cond.FORNECEDOR.FORN_NM_NOME</td>
                                                                        <td><a href="@Url.Action("EnviarEMailContato", "Produto", new { id = cond.FORN_CD_ID })" />@cond.FORNECEDOR.FORN_EM_EMAIL</td>
                                                                        <td><a href="@Url.Action("EnviarSMSContato", "Produto", new { id = cond.FORN_CD_ID })" />@cond.FORNECEDOR.FORN_NR_CELULAR</td>
                                                                        <td>@cond.FORNECEDOR.FORN_NR_TELEFONE</td>
