@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.FichaTecnicaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Fichas Técnicas</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCadastros", "BaseAdmin")">Cadastros</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaFT", "FichaTecnica")">Fichas Técnicas</a>
            </li>
            <li class="active">
                <strong>Fichas Técnicas - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Fichas Técnicas - Inclusão</h5>
                </div>
                <div class="ibox-content">
                    <div id="containerAlert"></div>
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirFT", "FichaTecnica", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {

                            <div class="form-group">
                                <br />
                                <button style="margin-left:15px;" class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão de Ficha Técnica</button>
                                @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseFT", controller: "FichaTecnica")
                            </div>

                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li><a data-toggle="tab" href="#tab-3">Composição</a></li>
                                <li><a data-toggle="tab" href="#tab-2">Apresentação do Produto</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-5 col-md-5 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.FITE_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.FITE_DT_CADASTRO)
                                                    Produto*
                                                    @Html.DropDownListFor(m => m.PROD_CD_ID, (SelectList)ViewBag.Produtos, "Selecionar", new { @class = "form-control", autofocus = true, @id="prod", onchange = "RecuperaProduto($(this).val())" })                            
                                                    @Html.ValidationMessageFor(m => m.PROD_CD_ID, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-7 col-md-7 col-xs-12">
                                                    Nome da Preparação
                                                    @Html.TextBoxFor(m => m.FITE_NM_NOME, new { @class = "form-control", autofocus = true, @id="nome" })
                                                    @Html.ValidationMessageFor(m => m.FITE_NM_NOME, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Num.Porções
                                                    @Html.TextBoxFor(m => m.FITE_NR_PORCOES, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_PORCOES, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Peso (Kg)
                                                    @Html.TextBoxFor(m => m.FITE_NR_PESO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_PESO, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Fator de Correção
                                                    @Html.TextBoxFor(m => m.FITE_NR_FATOR_CORRECAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_FATOR_CORRECAO, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Quant.Líquida
                                                    @Html.TextBoxFor(m => m.FITE_QN_QUANTIDADE_LIQUIDA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_QN_QUANTIDADE_LIQUIDA, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Perdas (%)
                                                    @Html.TextBoxFor(m => m.FITE_PC_PERCENTUAL_PERDA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_PC_PERCENTUAL_PERDA, "",new { @style="color:red" })
                                                </div>
                                            </div>

                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Modo de Preparo*
                                                    @Html.TextAreaFor(m => m.FITE_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.FITE_DS_DESCRICAO, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Forma de Apresentação*
                                                    @Html.TextAreaFor(m => m.FITE_DS_APRESENTACAO, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true})
                                                    @Html.ValidationMessageFor(m => m.FITE_DS_APRESENTACAO, "",new { @style="color:red" })
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                                @*Apresentação*@
                                <div id="tab-2" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Forma de Apresentação</h4><input class="btn btn-sm btn-warning" id="imgFT" type="file" multiple />
                                                <br />
                                                <div class="form-group">
                                                    <div class="ibox-content">
                                                        <br />
                                                        <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="myFiles">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <td>Nome</td>
                                                                    <td>Tipo</td>
                                                                    <td>Ações</td>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Insumos*@
                                <div id="tab-3" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Componente*
                                                    @Html.DropDownList("PROD_CD_ID", (SelectList)ViewBag.Insumos, "Selecionar", new { @class = "form-control", autofocus = true, id = "ins" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Quantidade*
                                                    @Html.TextBox("FITD_QN_QUANTIDADE", null, new { @class = "form-control", autofocus = true, id = "qtde" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    <span class="btn btn-success btn-sm" onclick="IncluirInsumoTabela()">Incluir Componente</span>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    <table id="insumos" class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color: lightsteelblue">
                                                            <tr>
                                                                <th>Componente</th>
                                                                <th>Unidade</th>
                                                                <th>Quantidade</th>
                                                                <th>Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <br />
                                    @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                    <button style="margin-left: 15px;" class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma inclusão de Ficha Técnica</button>
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseFT", controller: "FichaTecnica")
                                </div>

                            </div>
                        }
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/toastrStyles")
    @Styles.Render("~/plugins/summernoteStyles")
}
@section Scripts {
    @Scripts.Render("~/plugins/toastr")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/summernote")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    <script src="~/Scripts/UploadAnexo.js"></script>

    <script>
        function IncluirInsumoTabela() {
            $('#ins option:selected').prop('disabled', true);
            $('#ins option:selected').css('background', 'lightgray');

            var unidade = "";

            if ($('#ins').val() != "") {
                if ($('#qtde').val() != "") {
                    $.ajax({
                        url: '../FichaTecnica/GetUnidadeInsumo'
                        , type: 'POST'
                        , data: {
                            id: $('#ins option:selected').val()
                        }
                        , async: false
                        , success: function (r) {
                            unidade = r.unidade == null ? "-" : r.unidade;
                        }
                    });
                } else {
                    var alert = '<div class="alert alert-danger text-danger">'
                        + '<button type="button" class="close" data-dismiss="alert">Fechar</button>'
                        + '<ul>'
                        + '<li>Campo QUANTIDADE obrigatório</li>'
                        + '</ul>'
                        + '</div>';

                    $('#containerAlert').html(alert);
                }
            } else {
                if ($('#qtde').val() == "") {
                    var alert = '<div class="alert alert-danger text-danger">'
                        + '<button type="button" class="close" data-dismiss="alert">Fechar</button>'
                        + '<ul>'
                        + '<li>INSUMO obrigatório</li>'
                        + '<li>Campo QUANTIDADE obrigatório</li>'
                        + '</ul>'
                        + '</div>';

                    $('#containerAlert').html(alert);
                }
                else {
                    var alert = '<div class="alert alert-danger text-danger">'
                        + '<button type="button" class="close" data-dismiss="alert">Fechar</button>'
                        + '<ul>'
                        + '<li>INSUMO obrigatório</li>'
                        + '</ul>'
                        + '</div>';

                    $('#containerAlert').html(alert);
                }
            }

            if (isValidForm()) {
                $('button.close').click();
                $('table#insumos td.dataTables_empty').closest('tr').remove();

                var table = $('table#insumos tbody');

                table.append(
                    '<tr>'
                    + '<td><input name="rowIns" type="hidden" value="' + $('#ins option:selected').val() + '" />' + $('#ins option:selected').text() + '</td>'
                    + '<td>' + unidade + '</td>'
                    + '<td><input name="rowQtde" type="hidden" value="' + $('#qtde').val() + '" />' + $('#qtde').val() + '</td>'
                    //+ '<td><input name="rowDesc" type="hidden" value="' + $('#desc').val() + '" />' + $('#desc').val() + '</td>'
                    + '<td><span style="color: #337ab7; cursor: pointer;" class="fa fa-trash-o" onclick="apagaRow($(this))"></span></td>'
                    + '</tr>'
                );

                var data = {
                    "PROD_CD_ID": $('#ins option:selected').val()
                    , "FITD_QN_QUANTIDADE": $('#qtde').val()
                //    , "FITD_DS_DESCRICAO": $('#desc').val()
                }

                $.ajax({
                    url: '../FichaTecnica/MontaListaInsumos'
                    , data: data
                    , type: 'POST'
                });

                $("#ins").val($("#ins option:first").val());
                $('#qtde').val('');
                $('#desc').val('');
                $('#ins').attr("disabled", false);
            }
        }

         function apagaRow(td) {
             var tr = $(td.closest('tr'));

             $.ajax({
                 url: '../FichaTecnica/RemoveInsumoTabela' //'../Compra/UploadFileToSession'
                 , data: {
                     id: tr.find($('input[type=hidden][name=rowIns]')).val()
                 }
                 , type: 'POST'
             });

             var ins = $('#ins option[value="' + tr.find($('input[type=hidden][name=rowIns]')).val() + '"]');
             ins.prop('disabled', false);
             ins.css('background', '');

            td.closest('tr').remove();

            if ($('table#insumos tr').length == 1) {
                $('table#insumos tbody').append('<tr class="odd"><td valign="top" colspan="6" class="dataTables_empty">Nenhuma linha recuperada</td></tr>');
            }
         }

         function isValidForm() {
            if ($("#ins").val() != "" && $("#qtde").val() != "") {
                return true;
            } else {
                return false;
            }
        }
    </script>

    <script>
        function GetUnidadeInsumo(id) {
            var data = {
                id: id
            }
            $.ajax({
                url: '../FichaTecnica/GetUnidadeInsumo'
                , type: 'POST'
                , data: data
                , success: function (r) {
                    $('#unidade').val(r.unidade);
                }
            });
        }
    </script>
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
            $("#cep").mask("99999-999");
        });
    </script>
    <script type="text/javascript">
        $(document).ready(function(){
            //Chama o evento após selecionar um valor
            $('#pessoa').on('change', function() {
                //Verifica se o valor é igual a 1 e mostra a divCnpj
              if ( this.value == '2')
              {
                    $("#PF").hide();
                    $("#PJ").show();
              }
                //Se o tempo for mé igual a 2 mostra a divCpf
              else if( this.value == '1')
              {
                  $("#PJ").hide();
                  $("#PF").show();
              }
              else if( this.value == '3')
              {
                    $("#PF").hide();
                    $("#PJ").show();
              }

                //Se não for nem 1 nem 2 esconde as duas
                else{
                     $("#PJ").hide();
                     $("#PF").hide();
                }
            });
        });
    </script>
