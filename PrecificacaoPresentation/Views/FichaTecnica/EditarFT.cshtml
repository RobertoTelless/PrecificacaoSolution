@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.FichaTecnicaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-title"> 
        <h3 class="title">Fichas Técnicas</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardCadastros", "BaseAdmin")">Cadastros</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaFT", "FichaTecnica")">Fichas Técnicas</a>
            </li>
            <li class="active">
                <strong>Fichas Técnicas - Edição</strong>
            </li>
        </ol>
        <br />
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Fichas Técnicas - Edição</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-group">
                        <br />
                        @Html.ButtonLinkIndex(text: "Gerar Detalhes", action: "GerarRelatorioDetalhe", controller: "FichaTecnica")
                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBaseFT", controller: "FichaTecnica")
                    </div>

                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }
                    <div class="tabs-container">
                        <ul class="nav nav-tabs">
                            <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-2">Insumos</a></li>
                            <li class=""><a data-toggle="tab" href="#tab-3">Apresentação do Produto</a></li>
                        </ul>
                        <div class="tab-content">

                            @*Dados Gerais*@
                            <div id="tab-1" class="tab-pane active">
                                <div class="panel-body">
                                    @using (Html.BeginForm("EditarFT", "FichaTecnica", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                                    {
                                        <div class="row">
                                            <div class="form-group">
                                                @if (!String.IsNullOrEmpty(Model.FITE_AQ_FOTO_APRESENTACAO))
                                                {
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <br />
                                                        <img src="@Url.Content(Model.FITE_AQ_FOTO_APRESENTACAO)" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.FITE_NM_NOME', '@Url.Content(Model.FITE_AQ_FOTO_APRESENTACAO)')">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="col-lg-12 col-md-12 col-sm-12">
                                                        <br />
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@Model.FITE_NM_NOME', '~/Images/gallery/10s.jpg')">
                                                    </div>
                                                }
                                            </div>
                                            <div class="form-group">
                                                <br />
                                                @Html.ButtonActionSubmit(text: "Confirma edição de Ficha Técnica", htmlAttributes: new { id = "basictoast", style = "margin-left: 15px;" })
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-5 col-md-5 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.FITE_AQ_FOTO_APRESENTACAO)
                                                    @Html.HiddenFor(m => m.FITE_CD_ID)
                                                    @Html.HiddenFor(m => m.FITE_DT_CADASTRO)
                                                    @Html.HiddenFor(m => m.FITE_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.PROD_CD_ID)
                                                    Produto
                                                    @Html.TextBoxFor(x => x.PRODUTO.PROD_NM_NOME, new { @class = "form-control", @readonly = "readonly" })
                                                    @Html.ValidationMessageFor(m => m.PROD_CD_ID, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-8 col-md-8 col-xs-12">
                                                    Nome da Preparação
                                                    @Html.TextBoxFor(m => m.FITE_NM_NOME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NM_NOME, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">                
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Num.Porções
                                                    @Html.TextBoxFor(m => m.FITE_NR_PORCOES, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_PORCOES, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Peso (Kg)
                                                    @Html.TextBoxFor(m => m.FITE_NR_PESO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_PESO, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Fator de Correção
                                                    @Html.TextBoxFor(m => m.FITE_NR_FATOR_CORRECAO, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_NR_FATOR_CORRECAO, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Quant.Líquida
                                                    @Html.TextBoxFor(m => m.FITE_QN_QUANTIDADE_LIQUIDA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_QN_QUANTIDADE_LIQUIDA, "",new { @style="color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Perdas (%)
                                                    @Html.TextBoxFor(m => m.FITE_PC_PERCENTUAL_PERDA, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_PC_PERCENTUAL_PERDA, "",new { @style="color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Modo de Preparo*
                                                    @Html.TextAreaFor(m => m.FITE_DS_DESCRICAO, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_DS_DESCRICAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-12 col-md-12 col-xs-12">
                                                    Forma de Apresentação*
                                                    @Html.TextAreaFor(m => m.FITE_DS_APRESENTACAO, new { @class = "form-control", style = "width: 100%; height: 300px;", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.FITE_DS_APRESENTACAO, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>

                            @*Insumos*@
                            <div id="tab-2" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                @if (Model.FICHA_TECNICA_DETALHE.Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover dataTables-example">
                                                        <thead style="background-color: lightsteelblue">
                                                            <tr>
                                                                <th>Componente</th>
                                                                <th>Unidade</th>
                                                                <th>Quantidade</th>
                                                                <th></th>
                                                                <th class="td-one-action">Ações</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (Model.FICHA_TECNICA_DETALHE))
                                                            {
                                                                <tr>
                                                                    <td>@cond.PRODUTO.PROD_NM_NOME</td>
                                                                    <td>@cond.PRODUTO.UNIDADE.UNID_NM_NOME</td>
                                                                    <td>@cond.FITD_QN_QUANTIDADE</td>
                                                                    @if (!String.IsNullOrEmpty(cond.PRODUTO.PROD_AQ_FOTO))
                                                                    {
                                                                        <td><img src="@Url.Content(cond.PRODUTO.PROD_AQ_FOTO)" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.PRODUTO.PROD_NM_NOME', '@Url.Content(cond.PRODUTO.PROD_AQ_FOTO)')"></td>
                                                                    }
                                                                    else
                                                                    {
                                                                        <td><img src="@Url.Content("~/Images/gallery/10s.jpg")" style="width: auto; height: auto; max-height: 55px; max-width: 45px;" data-toggle="modal" data-target="#fotoModal" onclick="CriaModal('@cond.PRODUTO.PROD_NM_NOME', '~/Images/gallery/10s.jpg')"></td>
                                                                    }
                                                                    <td class="td-one-action">
                                                                        @Html.TableLinkDetails(cond.FITD_CD_ID, "EditarInsumoFT", "fa-edit", "Editar Insumo")
                                                                        @if (cond.FITD_IN_ATIVO == 1)
	                                                                    {
                                                                            <span style="color: #337ab7; cursor:pointer;" alt="Desativar" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/FichaTecnica/ExcluirInsumoFT/@cond.FITD_CD_ID')" title="Excluir"></span>
                                                                        }
                                                                        else
                                                                        {   
                                                                            <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/FichaTecnica/ReativarInsumoFT/@cond.FITD_CD_ID')" title="Reativar"></span>
                                                                        }
                                                                    </td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.ButtonLinkIndex(text: "Incluir Novo Insumo", action: "IncluirInsumoFT", controller: "FichaTecnica")
                                    </div>
                                </div>
                            </div>

                            @*Imagens - Foto e Anexos*@
                            <div id="tab-3" class="tab-pane">
                                <div class="panel-body">
                                    <div class="row">
                                        <div class="col-lg-6 col-md-6 col-xs-12">
                                            <div class="form-group">
                                                <h4>Apresentação</h4>
                                                @using (Html.BeginForm("UploadFotoFT", "FichaTecnica", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { enctype = "multipart/form-data", @id = "pwd-container3" }))
                                                {
                                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                                        <input style="float: left; margin-right: 5px;" type="file" accept=".jpg, .png, .jpeg, .gif|images/*" name="file" id="file" class="btn btn-sm btn-warning" />
                                                        <input style="float: left;" type="submit" value="Incluir Apresentação do Produto" class="btn btn-sm btn-success" />
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-4 col-xs-12">
                                            <div class="form-group">
                                                <div class="col-lg-12 col-md-12 col-sm-12">
                                                    <br />
                                                    @if (!String.IsNullOrEmpty(Model.FITE_AQ_FOTO_APRESENTACAO))
                                                    {
                                                        <img src="@Url.Content(Model.FITE_AQ_FOTO_APRESENTACAO)" style="width: auto; height: auto; max-height: 100%; max-width: 100%;">
                                                    }
                                                    else
                                                    {
                                                        <img src="~/Images/gallery/10s.jpg" style="width: auto; height: auto; max-height: 110px; max-width: 90px;">
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
         </div>
    </div>
</div>


