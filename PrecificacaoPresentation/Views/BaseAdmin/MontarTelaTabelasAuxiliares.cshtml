@using Presentation.Extensions
@using CrossCutting
@model ERP_Condominios_Solution.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Tabelas Auxiliares - Administração</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Cargos", action: "MontarTelaCargo", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Grupos de Contas", action: "MontarTelaGrupo", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Subgrupos de Contas", action: "MontarTelaSubgrupo", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Categorias Clientes", action: "MontarTelaCatCliente", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Categorias Produtos", action: "MontarTelaCatProduto", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "SubCategorias Produtos", action: "MontarTelaSubCatProduto", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Categorias Fornecedores", action: "MontarTelaCatFornecedor", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Tipos de Embalagens", action: "MontarTelaTipoEmbalagem", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Tipos de Ações", action: "MontarTelaTipoAcao", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Motivos Cancelamento", action: "MontarTelaMotCancelamento", controller: "TabelaAuxiliar", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Motivos Encerramento", action: "MontarTelaMotEncerramento", controller: "TabelaAuxiliar", buttonClass: "primary")                       
                    </div>
                    <br /><br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Voltar", controller: "BaseAdmin", action: "VoltarDashboardAdministracao")
                    </div>
                    <br /><br />
                </div>
            </div>  

            @*Estatísticas*@
            <div class="row">
                <h5 style="color:goldenrod; font-weight:bold">Aqui entrarão widgets com as quantidades em cada tabela auxiliar</h5>
            </div>

            @*Indicadores*@
            <br />
            <div class="row">
                <h5 style="color:goldenrod; font-weight:bold">Aqui entrarão indicadores a serem definidos</h5>
            </div>
        </div>
    </div>
</div>

