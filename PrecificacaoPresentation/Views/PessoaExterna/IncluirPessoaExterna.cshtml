@using Presentation.Extensions
@model ERP_Condominios_Solution.ViewModels.PessoaExternaViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title">
        <h3 class="title">Funções Temporárias</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardAdministracao", "BaseAdmin")">Dashboard - Administração</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaPessoaExterna", "PessoaExterna")">Funções Temporárias</a>
            </li>
            <li class="active">
                <strong>Funções Temporárias - Inclusão</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Funções Temporárias - Inclusão</h5>
                </div>
                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert">Fechar</button>
                            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        </div>
                    }

                    <div class="tabs-container">
                        @using (Html.BeginForm("IncluirPessoaExterna", "PessoaExterna", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", @id = "pwd-container1" }))
                        {
                            <ul class="nav nav-tabs">
                                <li class="active"><a data-toggle="tab" href="#tab-1">Dados Gerais</a></li>
                                <li><a data-toggle="tab" href="#tab-2">Imagens</a></li>
                            </ul>

                            <div class="tab-content">
                                @*Dados Gerais*@
                                <div id="tab-1" class="tab-pane active">
                                    <div class="panel-body">
                                        <div class="row">
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-4 col-md-4 col-xs-12">
                                                    @Html.HiddenFor(m => m.ASSI_CD_ID)
                                                    @Html.HiddenFor(m => m.PEEX_IN_ATIVO)
                                                    @Html.HiddenFor(m => m.PEEX_DT_CADASTRO)
                                                    Nome*
                                                    @Html.TextBoxFor(m => m.PEEX_NM_NOME, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PEEX_NM_NOME, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    Cargo
                                                    <div class="input-group">
                                                        @Html.DropDownListFor(m => m.CARG_CD_ID, (SelectList)ViewBag.Cargos, "Selecionar", new { @class = "form-control", autofocus = true })
                                                        @Html.ValidationMessageFor(m => m.CARG_CD_ID, "", new { @style = "color:red" })
                                                        <span class="input-group-addon">
                                                            @Html.TableLinkAction("IncluirCargo", "PessoaExterna", null, "glyphicon glyphicon-plus", "Adicionar Cargo")
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    CPF
                                                    @Html.TextBoxFor(m => m.PEEX_NR_CPF, new { @class = "form-control", autofocus = true, @id="cpf" })
                                                    @Html.ValidationMessageFor(m => m.PEEX_NR_CPF, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    RG
                                                    @Html.TextBoxFor(m => m.PEEX_NR_RG, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PEEX_NR_RG, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Telefone
                                                    @Html.TextBoxFor(m => m.PEEX_NR_TELEFONE, new { @class = "form-control", autofocus = true, @id="tel" })
                                                    @Html.ValidationMessageFor(m => m.PEEX_NR_TELEFONE, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-xs-12">
                                                    Celular*
                                                    @Html.TextBoxFor(m => m.PEEX_NR_CELULAR, new { @class = "form-control", autofocus = true, @id="cel" })
                                                    @Html.ValidationMessageFor(m => m.PEEX_NR_CELULAR, "", new { @style = "color:red" })
                                                </div>
                                                <div class="col-lg-3 col-md-3 col-xs-12">
                                                    E-Mail*
                                                    @Html.TextBoxFor(m => m.PEES_EM_EMAIL, new { @class = "form-control", autofocus = true })
                                                    @Html.ValidationMessageFor(m => m.PEES_EM_EMAIL, "", new { @style = "color:red" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @*Imagens*@
                                <div id="tab-2" class="tab-pane">
                                    <div class="panel-body">
                                        <div class="row">
                                            <hr />
                                            <div class="col-lg-12 col-md-12 col-xs-12">
                                                <h4>Anexos</h4><input class="btn btn-sm btn-warning" id="inputFile" type="file" multiple />
                                                <br />
                                                <div class="form-group">
                                                    <div class="ibox-content">
                                                        <br />
                                                        <table style="width: 100%;" class="table table-striped table-bordered table-hover dataTables-example" id="myFiles">
                                                            <thead style="background-color:lightsteelblue">
                                                                <tr>
                                                                    <td>Nome</td>
                                                                    <td>Tipo</td>
                                                                    <td>Ações</td>
                                                                </tr>
                                                            </thead>
                                                            <tbody></tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <br />
                                    <div class="col-lg-12 col-md-12 col-xs-12">
                                        @Html.ButtonActionSubmit(text: "BtnSubmit", htmlAttributes: new { id = "submit", style = "display: none;" })
                                        <button class="btnSubmit btn btn-sm btn-success" id="basictoast" type="button">Confirma Inclusão de Função Temporária</button>
                                        @Html.ButtonLinkIndex(text: "Voltar", action: "VoltarBase", controller: "PessoaExterna")
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

