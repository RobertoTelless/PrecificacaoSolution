@using Presentation.Extensions
@using CrossCutting;
@model EntitiesServices.Model.PESSOA_EXTERNA
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="modalContainer">
        <div id="modal" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        @*Titulo gerado dinamicamente*@
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @*Gerado dinamicamente*@
                    </div>
                    <div class="modal-footer">
                        <button onclick="limpaModal()" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="page-title">
        <h3 class="title">Pessoas Externas</h3>
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarAdmin", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardAdministracao", "BaseAdmin")">Dashboard - Administração</a>
            </li>
            <li class="active">
                <strong>Pessoas Externas</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Filtros</h5>
                </div>          
            
                @using (Html.BeginForm("FiltrarPessoaExterna", "PessoaExterna", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    <div class="ibox-content">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Cargo
                                    @Html.DropDownListFor(m => m.CARG_CD_ID, (SelectList)ViewBag.Cargos, "Selecionar", new { @class = "form-control", autofocus = true })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    Nome
                                    @Html.TextBoxFor(m => m.PEEX_NM_NOME, new { @class = "form-control", autofocus = true })
                                </div>
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    CPF
                                    @Html.TextBoxFor(m => m.PEEX_NR_CPF, new { @class = "form-control", autofocus = true, @id="cpf" })
                                </div>
                                <div class="col-lg-3 col-md-3 col-xs-12">
                                    E-Mqil
                                    @Html.TextBoxFor(m => m.PEES_EM_EMAIL, new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "Filtrar")
                                    @if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER")
                                    {
                                        @Html.ButtonLinkIndex(text: "Incluir Nova Pessoa Externa", controller: "PessoaExterna", action: "IncluirPessoaExterna", buttonClass: "primary")
                                    }
                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "PessoaExterna", action: "RetirarFiltroPessoaExterna")
                                    @Html.ButtonLinkIndex(text: "Exibir Todas", controller: "PessoaExterna", action: "MostrarTudoPessoaExterna")
                                    @Html.ButtonLinkIndex(text: "Exibir Todas", controller: "PessoaExterna", action: "GerarRelatorioLista")
                                    @Html.ButtonLinkIndex(text: "Voltar", controller: "PessoaExterna", action: "VoltarDash")
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>


    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pessoas Externas</h5>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        @if (ViewBag.Listas != null && (ViewBag.Listas as List<EntitiesServices.Model.PESSOA_EXTERNA>).Count > 0)
                        {
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Cargo</th>
                                        <th>CPF</th>
                                        <th>RG</th>
                                        <th>E-Mail</th>
                                        <th>Telefone</th>
                                        <th>Celular</th>
                                        <th class="td-one-action">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cond in (ViewBag.Listas as List<EntitiesServices.Model.PESSOA_EXTERNA>))
                                    {
                                        <tr>
                                            <td>@cond.PEEX_NM_NOME</td>
                                            <td>@cond.CARGO_USUARIO.CARG_NM_NOME</td>
                                            <td>@cond.PEEX_NR_CPF</td>
                                            <td>@cond.PEEX_NR_RG</td>
                                            <td><a href="@Url.Action("EnviarEMailPessoaExterna", "PessoaExterna", new { id = cond.PEEX_CD_ID })" />@cond.PEES_EM_EMAIL</td>
                                            <td>@cond.PEEX_NR_TELEFONE</td>
                                            <td><a href="@Url.Action("EnviarSMSPessoaExterna", "PessoaExterna", new { id = cond.PEEX_CD_ID })" />@cond.PEEX_NR_CELULAR</td>
                                            <td class="td-one-action">
                                                @if (ViewBag.Perfil == "ADM" || ViewBag.Perfil == "GER")
                                                {
                                                    @Html.TableLinkDetails(cond.PEEX_CD_ID, "EditarPessoaExterna", "fa-edit", "Editar")
                                                    if (cond.PEEX_IN_ATIVO == 1)
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Excluir" class="tbl-link fa-lg fa fa-trash-o" onclick="ShowModalExcluir('/PessoaExterna/ExcluiPessoaExterna/@cond.PEEX_CD_ID')" title="Excluir"></span>
                                                    }
                                                    else
                                                    {
                                                        <span style="color: #337ab7; cursor:pointer;" alt="Reativar" class="tbl-link fa-lg fa fa-refresh" onclick="ShowModalReativar('/PessoaExterna/ReativarPessoaExterna/@cond.PEEX_CD_ID')" title="Reativar"></span>
                                                    }
                                                }
                                                else
                                                {
                                                    @Html.TableLinkDetails(cond.PEEX_CD_ID, "VerPessoaExterna", "fa-search", "Consultar")
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                                <div style="border: 5px solid #F6A54A; padding: 10px; border-radius: 8px 8px; " class="col-lg-4 col-md-4 col-xs-8">
                                    <h2 style="font-weight: bold">Sua pesquisa não retornou nenhum resultado</h2>
                                    <p>Tente outras opções de pesquisa</p>

                                    @Html.ButtonLinkIndex(text: "Voltar", controller: "PessoaExterna", action: "RetirarFiltroPessoaExterna")
                                </div>
                                <div class="col-lg-4 col-md-4 col-xs-2">

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>

    <script>
        $(function () {
            limpaModal();
        });

        function limpaModal() {
            $('#btnModal').remove();
            $('#modalTitle').remove();
        }

        function ShowModalExcluir(url) {
            $('#modal').find('.modal-footer').prepend('<a id="btnModal" alt="Desativar" class="btn btn-primary" href="' + url + '" target="_self" title="Desativar">Confirmar</a>');
            $('#modal').find('.modal-body').html('Confirma exclusão de máquina de cartão?');
            $('#modal').find('.modal-header').prepend('<h5 id="modalTitle" class="modal-title">Confimar Exclusão</h5>');
            $('#modal').modal('show');
        }

        function ShowModalReativar(url) {
            $('#modal').find('.modal-footer').prepend('<a id="btnModal" alt="Reativar" class="btn btn-primary" href="' + url + '" target="_self" title="Reativar">Confirmar</a>');
            $('#modal').find('.modal-body').html('Confirma reativação de máquina de cartão?');
            $('#modal').find('.modal-header').prepend('<h5 id="modalTitle" class="modal-title">Confimar Reativação</h5>');
            $('#modal').modal('show');
        }
    </script>

    <script type="text/javascript">
        $(document).ready(function () {

            $('.dataTables-example').DataTable({
                pageLength: 25,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'excel', title: 'Maquina_Planilha' },
                    { extend: 'pdf', title: 'Maquina_PDF' },

                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

