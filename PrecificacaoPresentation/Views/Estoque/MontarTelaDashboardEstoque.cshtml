@using Presentation.Extensions
@using CrossCutting
@model ERP_Condominios_Solution.ViewModels.UsuarioViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div id="content" class="wraper container-fluid">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-12 col-md-12 col-sm-12">
            @*Atalhos*@
            <div class="row">
                <h3 style="color:olivedrab; font-weight:bold">Dashboard - Controle de Estoque</h3>
                <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                    <br />
                    <div class="col-lg-12 col-md-12 col-xs-12">
                        @Html.ButtonLinkIndex(text: "Produtos", action: "MontarTelaProduto", controller: "Produto", buttonClass: "success")
                        @Html.ButtonLinkIndex(text: "Consulta Estoque", action: "MontarTelaEstoqueProduto", controller: "Estoque", buttonClass: "primary")
                        @Html.ButtonLinkIndex(text: "Dashboard", controller: "BaseAdmin", action: "CarregarBase")
                    </div>
                    <br /><br />
                </div>
            </div>

            @*Estatísticas*@
            <div class="row">
                <div class="col-lg-2 col-md-2 col-sm-12">
                    <div class="ibox-content text-center">
                        <h1>@Model.USUA_NM_NOME.Substring(0, Model.USUA_NM_NOME.IndexOf(" "))</h1>
                        <div class="m-b-sm">
                            <img alt="image" class="img-circle" src="@Url.Content(Model.USUA_AQ_FOTO)" style="width: auto; height: auto; max-height: 90px; max-width: 90px;">
                        </div>
                        <p class="font-bold">@((String)Session["NomeGreeting"])</p>
                        <div class="text-center">
                            @Html.ButtonLinkIndex(text: "Perfil", action: "MontarTelaPerfilUsuario", controller: "Usuario", buttonClass: "btn btn-xs btn-white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-warning pull-right">Hoje</span>
                            <h5>Resumo de Movimentações</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Total</small>
                                    <h4>@ViewBag.TotalSum</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Entradas</small>
                                    <h4>@ViewBag.TotalEntradaSum</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Saídas</small>
                                    <h4>@ViewBag.TotalSaidaSum</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Total Mês</small>
                                    <h4>@ViewBag.MesSum</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Entradas Mês</small>
                                    <h4>@ViewBag.MesEntradaSum</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Saídas Mês</small>
                                    <h4>@ViewBag.MesSaidaSum</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="col-lg-4 col-md-4 col-sm-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <span class="label label-warning pull-right">Hoje</span>
                            <h5>Resumo de Produtos</h5>
                        </div>
                        <div class="ibox-content">
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Total</small>
                                    <h4>@ViewBag.ProdTotal</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Produtos</small>
                                    <h4>@ViewBag.Prods</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Insumos</small>
                                    <h4>@ViewBag.Ins</h4>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <small class="stats-label">Ponto Pedido</small>
                                    <h4>@ViewBag.PontoPedido</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Estoque Zerado</small>
                                    <h4>@ViewBag.EstoqueZerado</h4>
                                </div>
                                <div class="col-xs-4">
                                    <small class="stats-label">Est. Negativo</small>
                                    <h4>@ViewBag.EstoqueNegativo</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkgreen">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Estoque</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.MesEntradaSum</h1>
                            <small>Entradas no Mês</small>
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkgreen">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Estoque</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.MesSaidaSum</h1>
                            <small>Saídas no Mês</small>
                            <br />
                            <br />
                            <br />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkgreen">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Estoque</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.PontoPedido</h1>
                            <small>Ponto de Pedido</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Produto", action: "VerProdutosPontoPedido", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkgreen">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Estoque</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.EstoqueZerado</h1>
                            <small>Estoque Zerado</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Produto", action: "VerProdutosEstoqueZerado", buttonClass: "white")
                        </div>
                    </div>
                </div>
                <div class="col-lg-2">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title"  style="background-color:darkseagreen; color:darkgreen">
                            <span class="label label-primary pull-right">Hoje</span>
                            <h5>Estoque</h5>
                        </div>
                        <div class="ibox-content">
                            <h1 class="no-margins">@ViewBag.EstoqueNegativo</h1>
                            <small>Estoque Negativo</small>
                            <br />
                            <br />
                            @Html.ButtonLinkIndex(text: "Ver", controller: "Produto", action: "VerProdutosEstoqueNegativo", buttonClass: "white")
                        </div>
                    </div>
                </div>
            </div>

            @*Indicadores*@
            <br />
            <div class="row">

                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5>Indicadores</h5>
                        </div>
                        <div class="ibox-content ibox-heading">
                            <h3><i class="fa fa-line-chart"></i> Indicadores</h3>
                            <small><i class="fa fa-tim"></i> Valores acumulados/atualizados até hoje no mês corrente</small>
                        </div>
                        <div class="ibox-content" style="height: 1800px">
                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Movimentações de Estoque/Dia</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                @if ((ViewBag.ListaMov as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Data de Movimentação</th>
                                                                <th>Total</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaMov as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>))
                                                            {
                                                                <tr>
                                                                    <td>@cond.DataEmissao.ToShortDateString()</td>
                                                                    <td>@cond.Valor</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Gráfico de Movimentações/Dia</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                <canvas id="barChartEst" height="150"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4 col-md-4 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Movimentações por Tipo - Mês Corrente</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                @if ((ViewBag.ListaSituacao as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>).Count > 0)
                                                {
                                                    <table class="table table-striped table-bordered table-hover">
                                                        <thead style="background-color:lightsteelblue">
                                                            <tr>
                                                                <th>Tipo</th>
                                                                <th>Total</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @foreach (var cond in (ViewBag.ListaSituacao as List<ERP_Condominios_Solution.ViewModels.ModeloViewModel>))
                                                            {
                                                                <tr>
                                                                    <td>@cond.Data</td>
                                                                    <td>@cond.Valor</td>
                                                                </tr>
                                                            }
                                                        </tbody>
                                                    </table>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-8 col-md-8 col-xs-12">
                                    <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins" style="border-bottom: solid; border-bottom-color: darkblue; border-bottom-width: 2px; border-left: solid; border-left-color: darkblue; border-left-width: 1px; border-right: solid; border-right-color: darkblue; border-right-width: 1px; border-top: solid; border-top-color: darkblue; border-top-width: 1px">
                                        <div class="ibox-title">
                                            <h4>Gráfico de Movimentações por Tipo - Mês Corrente</h4>
                                        </div>
                                        <div class="ibox-content">
                                            <div class="row">
                                                <canvas id="doughnutChartEst" height="150"></canvas>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

