@using Presentation.Extensions
@using CrossCutting;
@model ERP_Condominios_Solution.ViewModels.ProdutoViewModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="page-title"> 
        <h3 class="title">Estoque</h3> 
        <br />
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("CarregarBase", "BaseAdmin")">Dashboard</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaDashboardEstoque", "Estoque")">Dashboard - Estoque</a>
            </li>
            <li>
                <a href="@Url.Action("MontarTelaEstoqueProduto", "Estoque")">Estoque - Consulta</a>
            </li>
            <li class="active">
                <strong>Produtos - Movimentação do Estoque</strong>
            </li>
        </ol>
        <br />
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="col-lg-12 col-md-12 col-xs-12 ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Produto - Movimentação do Estoque</h5>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm("FiltrarMovimentacaoEstoqueProdutoNova", "Estoque", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        <div class="ibox-content">
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-2 col-md-2 col-xs-12">
                                    @Html.HiddenFor(x => x.PROD_CD_ID)
                                    Entrada/Saída
                                    @Html.DropDownListFor(m => m.EntradaSaida, (SelectList)ViewBag.FiltroEntradaSaida, "Selecionar", new { @class = "form-control", autofocus = true })
                                </div>
                            </div>
                            <div class="form-group" style=" margin-left: -15px; margin-right: -15px;">
                                <div class="col-lg-12 col-md-12 col-xs-12">
                                    @Html.ButtonActionSubmit(text: "Filtrar")
                                    @Html.ButtonLinkIndex(text: "Retirar Filtro", controller: "Estoque", action: "RetirarFiltroMovimentacaoEstoqueProdutoNova", routeValues: new { id = Model.PROD_CD_ID })
                                    @Html.ButtonLinkIndex(text: "Voltar", action: "MontarTelaEstoqueProduto", controller: "Estoque")
                                </div>
                            </div>
                        </div>
                    }
                <div class="row">
                    @if (ViewBag.Lista != null && (ViewBag.Lista as List<EntitiesServices.Model.MOVIMENTO_ESTOQUE_PRODUTO>).Count > 0)
                    {
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead style="background-color:lightsteelblue">
                                <tr>
                                    <th>Tipo</th>
                                    <th>Produto</th>
                                    <th>Data</th>
                                    <th>Movimentação</th>
                                    <th>Operação</th>
                                    <th>Descrição</th>
                                    <th>Quantidade</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cond in (ViewBag.Lista as List<EntitiesServices.Model.MOVIMENTO_ESTOQUE_PRODUTO>))
                                {
                                    <tr>
                                        @if (cond.PRODUTO.PROD_IN_TIPO_PRODUTO == 1)
	                                    {
                                            <td><span class="badge badge-primary">Produto</span></td>
                                        }
                                        else if (cond.PRODUTO.PROD_IN_TIPO_PRODUTO == 2)
                                        {
                                            <td><span class="badge badge-success">Insumo</span></td>
                                        }
                                        <td>@cond.PRODUTO.PROD_NM_NOME</td>
                                        <td>@cond.MOEP_DT_MOVIMENTO.ToShortDateString()</td>

                                        @if (cond.MOEP_IN_TIPO_MOVIMENTO == 1)
                                        {
                                            <td><span class="badge badge-primary">Entrada</span></td>
                                        }
                                        else if (cond.MOEP_IN_TIPO_MOVIMENTO == 2)
                                        {
                                            <td><span class="badge badge-success">Saída</span></td>
                                        }

                                        @if (cond.MOEP_IN_TIPO_MOVIMENTO == 1)
                                        {
                                            if (cond.MOEP_IN_OPERACAO == 1)
                                            {
                                                <td><span class="badge badge-primary">Entrada Avulsa</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACAO == 2)
                                            {
                                                <td><span class="badge badge-success">Devolução de Cliente</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACAO == 3)
                                            {
                                                <td><span class="badge badge-sucess">Acerto de Estoque</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACAO == 4)
                                            {
                                                <td><span class="badge badge-warning">Outras Entradas</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACAO == 5)
                                            {
                                                <td><span class="badge badge-warning-light">Estoque Inicial</span></td>
                                            }
                                        }
                                        else
                                        {
                                            if (cond.MOEP_IN_OPERACO_SAIDA == 1)
                                            {
                                                <td><span class="badge badge-primary">Saída Avulsa</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACO_SAIDA == 2)
                                            {
                                                <td><span class="badge badge-sucess">Devolução para Fornecedor</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACO_SAIDA == 3)
                                            {
                                                <td><span class="badge badge-danger">Perda ou Roubo</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACO_SAIDA == 4)
                                            {
                                                <td><span class="badge badge-warning">Descarte</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACO_SAIDA == 5)
                                            {
                                                <td><span class="badge badge-sucess">Acerto de Estoque</span></td>
                                            }
                                            else if (cond.MOEP_IN_OPERACO_SAIDA == 6)
                                            {
                                                <td><span class="badge badge-warning-light">Outras Saídas</span></td>
                                            }
                                        }

                                        <td>@cond.MOEP_DS_JUSTIFICATIVA</td>
                                        <td>@cond.MOEP_QN_QUANTIDADE</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link href="~/Content/themes/base/all.css" rel="stylesheet" />  
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
}

@section Scripts {

    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/bundles/inputmask")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.maskedinput/1.4.1/jquery.maskedinput.js"></script>
    
   
    <script type="text/javascript">
        $(function () {
            $("#cpf").mask("999.999.999-99");
            $("#cnpj").mask("99.999.999/9999-99");
        });
    </script>
}

@if (ViewBag.Message != null)
{
    <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
    </script>
}

